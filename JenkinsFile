pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'mvn clean package -DskipTests=true'
            }
        }

        stage ('test') {
            steps {
              sh 'mvn test'
            }
        }

        stage('deploy development'){
            steps {
                sh '''
                  echo "Deploying...."
                  sleep 2
                  echo "Deployed"
                '''
            }
        }
    }
    post {
        failure {
            sh 'echo "NO NO NONO NONOOONONONONONNONOONO NO"'
        }
        
        success {
            sh 'echo "YES YES YES"'
        }
    }
}
